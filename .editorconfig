# Top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = LF
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
max_line_length = 119

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
